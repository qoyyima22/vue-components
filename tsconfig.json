{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "allowJs": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "removeComments": true,
    "declaration": false,
    "noEmitOnError": false,
    "lib": [ "dom", "es5", "es2015.promise", "es2015.iterable"],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "components/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}